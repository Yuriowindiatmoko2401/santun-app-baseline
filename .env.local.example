# Local development environment with mock services
# Copy this file to .env.local to use local alternatives

# Enable local services
USE_LOCAL_SERVICES=true

# Redis connection (Docker)
REDIS_URL=redis://localhost:6379

# Optional dummy values for local development
# These won't be used with USE_LOCAL_SERVICES=true, but prevent errors 
# in case some code tries to access these environment variables
KINDE_CLIENT_ID=local-dev
KINDE_CLIENT_SECRET=local-dev
KINDE_ISSUER_URL=http://localhost:3000
KINDE_SITE_URL=http://localhost:3000
KINDE_POST_LOGOUT_REDIRECT_URL=http://localhost:3000
KINDE_POST_LOGIN_REDIRECT_URL=http://localhost:3000

UPSTASH_REDIS_REST_URL=https://dummy
UPSTASH_REDIS_REST_TOKEN=dummy

NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=local-dev
NEXT_PUBLIC_CLOUDINARY_API_KEY=local-dev
CLOUDINARY_API_SECRET=local-dev

PUSHER_APP_ID=local-dev
PUSHER_APP_KEY=local-dev
PUSHER_APP_SECRET=local-dev
PUSHER_APP_CLUSTER=eu

NEXT_PUBLIC_PUSHER_APP_KEY=local-dev
